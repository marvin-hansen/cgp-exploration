load("@rules_rust//rust:defs.bzl", "rust_doc", "rust_doc_test", "rust_proc_macro")

# https://bazelbuild.github.io/rules_rust/rust.html#rust_proc_macro
rust_proc_macro(
    name = "binance_data_integration_macro",
    srcs = glob([
        "src/*.rs",
    ]),
    crate_root = "src/lib.rs",
    tags = [
        "binance_data_integration_macro",
        "macro",
    ],
    visibility = ["//visibility:public"],
    deps = [
        # External crates
        "//thirdparty/crates:syn",
        "//thirdparty/crates:quote",
    ],
)

rust_doc(
    name = "doc",
    crate = ":binance_data_integration_macro",
    tags = ["doc"],
    visibility = ["//visibility:public"],
)

rust_doc_test(
    name = "doc_test",
    crate = ":binance_data_integration_macro",
    tags = ["doc-test"],
    visibility = ["//visibility:public"],
)
