load("@rules_rust//rust:defs.bzl", "rust_doc", "rust_doc_test", "rust_library")

rust_library(
    name = "message_producer",
    srcs = glob([
        "src/**",
    ]),
    crate_root = "src/lib.rs",
    tags = [
        "infra",
        "message_bus",
        "message_producer",
    ],
    visibility = ["//visibility:public"],
    deps = [
        # Internal crates
        "//alias:message_shared",
        "//alias:trait_event_processor",
        # External crates
        "//thirdparty/crates:bytes",
        "//thirdparty/crates:iggy",
    ],
)

rust_doc(
    name = "doc",
    crate = ":message_producer",
    tags = ["doc"],
    visibility = ["//visibility:public"],
)

rust_doc_test(
    name = "doc_test",
    crate = ":message_producer",
    tags = ["doc-test"],
    visibility = ["//visibility:public"],
)
